rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to questions for the quiz
    match /questions/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow users to save their quiz results
    match /quizResults/{document} {
      allow create: if true;
      allow read: if request.auth != null;
      allow update: if request.auth != null;
      // Only allow deletion for admins (authenticated users with admin claims)
      allow delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Admin access for statistics and management
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
